<div class="container">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.input :movie_id, collection: @movies.pluck(:title, :id) %>
    <%= f.submit "Create Bookmark", class: "btn btn-primary" %>
  <% end %>

  <hr>
  
  <p><%= link_to "Back to lists", lists_path, class: "btn btn-info" %></p>
</div>